mixin sReviews()
	// start sReviews
	+b.SECTION.sReviews.section#sReviews&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 sReviews
			+e.slider-wrap
				+e.slider--js.swiper-container 
					.swiper-wrapper
						mixin slide(t, p)
							+e.slide.swiper-slide
								+b.rew-item
									+e.block
										+e.head
											.row.align-items-center
												.col
													img(src="img/svg/rew-logo.svg" loading="lazy", alt="")
												.col-auto
													+b.star-block 
														+icon("star", "active")
														+icon("star", "active")
														+icon("star", "active")
														+icon("star", "active")
														+icon("star")
										+e.body 
											h5!= t
											p!= p
											+e.date 22 февраля 2021
						+slide(`Владимир Ковалев`, `Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться. Lorem Ipsum используют потому, что тот обеспечивает более или менее стандартное заполнение шаблона, а также реальное распределение ...`)
