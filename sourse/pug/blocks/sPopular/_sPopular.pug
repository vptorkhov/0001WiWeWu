mixin sPopular()
	// start sPopular
	+b.SECTION.sPopular.section#sPopular&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Популярное
			.tabs
				.tabs__caption
					.tabs__btn.active Магазины
						span
					.tabs__btn Категории
						span
					.tabs__btn Товары
						span
				.tabs__content-wrap
					.tabs__content.active
						+content-item('Tchibo')
					.tabs__content 
						+content-item('Кофе')
					.tabs__content
						+content-item('Магазин Tchibo')
	// end sPopular

